{
	"compilerOptions": {
		"lib": ["es5", "es6", "DOM"],
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"rootDir": "./src",
		"outDir": "./build",
		"allowJs": true,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"strictPropertyInitialization": false,
		"suppressImplicitAnyIndexErrors": true
	},
	"include": ["./src/*"]
}
